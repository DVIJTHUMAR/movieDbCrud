<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Movies Cards</title>

    <link rel="stylesheet" href="style.css">

</head>

<body class="py-5">

    

    <div class="container">
        <div class="row">
            <% MovieCards.forEach(function(card,index){ %>
                <div class="card mb-3 p-3" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-4 p-2">
                            <img src="./<%= card.movieImage %>" alt="image" class="img-fluid">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body border border-1">
                                <h1 class="card-title"><%= card.movieName %></h1>
                                <p class="card-text"><%= card.price %></p>
                                <p class="card-text"><%= card.description %></p>
                                <p class="card-text"><%= card.type %></p>
                                <p class="card-text"><%= card.rating %></p>
                            </div>
                            <div class=" py-3">
                                <button class="btn btn-primary">
                                    <a href="/editMovie/<%= card.id %>" class="text-light">Edit</a>
                                </button>
                                ||
                                <button class="btn btn-danger">
                                    <a href="/deleteMovie/<%= card.id %>" class="text-light">Delete</a>
                                </button>
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-primary">
                        <a href="/" class="text-light">Add Products</a>
                    </button>        
                </div>
                <% }); %>
            
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>